<Window x:Class="Maze_Runner.WindowGame2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Maze_Runner"
        mc:Ignorable="d"
        Title="Play2" Height="720" Width="1200" WindowState="Maximized" Focusable="True">
    <Grid Background="Gray">
        <ScrollViewer x:Name="ScrolGameField" HorizontalScrollBarVisibility="Auto" 
                      VerticalScrollBarVisibility="Auto" 
                      KeyDown="GameField_KeyDown" KeyUp="GameField_KeyDown">
            <Grid x:Name="GameField" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </ScrollViewer>
    </Grid>
</Window>